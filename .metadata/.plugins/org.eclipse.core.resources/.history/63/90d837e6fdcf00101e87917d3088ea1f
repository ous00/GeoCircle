class Content(object):
    '''
    classdocs
    '''
    describtion = ''

    def __init__(self, describtion):
        '''
        Constructor
        '''
        self.describtion = describtion
    
    def asBinary(self):
        return None
    
    def asXML(self):
        return None
    
    def asHTML(self):
        return None
    
    def asString(self):
        return None
    
class TextContent(Content):
    '''
    a text message content
    '''
    