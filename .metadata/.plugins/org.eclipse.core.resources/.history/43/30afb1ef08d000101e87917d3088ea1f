class Content(object):
    '''
    classdocs
    '''
    describtion = ''
    __hander_map__ = {Content.Type.TEXT: asString, Content.Type.XML: asXML}
    
    @staticmethod
    def hander(type):
        return Content.__hander_map__[type]

    def __init__(self, describtion):
        '''
        Constructor
        '''
        self.describtion = describtion
    
    def asBinary(self):
        return None
    
    def asXML(self):
        return None
    
    def asHTML(self):
        return None
    
    def asString(self):
        return None
    
    class Type:
        TEXT    = 0
        XML     = 1
        VIDEO   = 2
        AUDIO   = 3
        def __init__(self, type):
       
            
    
class TextContent(Content):
    '''
    a text message content
    '''
    pass