class Content(object):
    '''
    classdocs
    '''
    describtion = ''
    __hander_map__ = {1: asString, 2: asXML}
    @staticmethod
    def hander(i):
       return __hander_map__[i]

    def __init__(self, describtion):
        '''
        Constructor
        '''
        self.describtion = describtion
    
    def asBinary(self):
        return None
    
    def asXML(self):
        return None
    
    def asHTML(self):
        return None
    
    def asString(self):
        return None
    
    class Type:
        TEXT    = 0
        XML     = 1
        VIDEO   = 2
        AUDIO   = 3
       
            
    
class TextContent(Content):
    '''
    a text message content
    '''
    pass